_arguments -n : \
  '(-d --duration)'{-d,--duration=}'[Capture duration(second)]' \
  '(--delay)--delay=[Delay before recording(second)]' \
  '(-c --cursor)'{-c,--cursor}'[Record mouse cursor(default: disable)]' \
  '(-a --audio)'{-a,--audio}'[Record audio(default: disable)]' \
  '(-r --rectangle)'{-r,--rectangle}'[Record specified rectangle instead of window]' \
  '(-V --verbose)'{-v,--verbose}'[Make the output verbose]' \
  '(- :)'{-v,--version}'[Show version]' \
  '(- :)'{-h,--help}'[Show help message]' \
  '*: :_files'

